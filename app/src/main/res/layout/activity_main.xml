<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/exercise_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/exercise_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="48sp"
        android:layout_below="@+id/exercise_text"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/rest_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rest"
        android:textSize="24sp"
        android:layout_below="@+id/exercise_time_text"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/rest_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="48sp"
        android:layout_below="@+id/rest_text"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/exercise_duration_edit"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:hint="Exercise duration (sec)"
        android:inputType="number"
        android:layout_below="@+id/rest_time_text"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="0"/>

    <EditText
        android:id="@+id/rest_duration_edit"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:hint="Rest duration (sec)"
        android:inputType="number"
        android:layout_below="@+id/exercise_duration_edit"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="0"/>

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_below="@+id/rest_duration_edit"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Stop" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/rest_time_text"
        android:layout_marginTop="24dp"
        android:progress="0"
        android:max="100"/>
</RelativeLayout>
